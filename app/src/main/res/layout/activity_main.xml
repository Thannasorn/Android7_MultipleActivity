<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F8B3"
        android:text="Menu Multi Activity"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0000FF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/callFirst"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Call First Avtivity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/callSecond"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Call Second Avtivity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/callThird"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Call Third Avtivity"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/callExit"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Exit Multiple Activity"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>